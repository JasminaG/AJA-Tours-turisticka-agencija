            </div><br>
        </div>
    </div>
    <hr><br>
    @*TOP PONUDE - HOVER *@
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <a class="" href="~/Atina.cshtml">
                    <img class="slikaindex hvr-pop" src="Slike/athenes.jpg" alt="Atina">
                    <h3>Atina</h3>
                    <p>
                        <strong>8 dana</strong>
