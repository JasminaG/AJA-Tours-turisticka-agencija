@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "ListProductForDelete";

    var db = Database.Open("StarterSite");
    var selectQueryString = "SELECT * FROM Putovanje ORDER BY IdPutovanje";
}
<style>
    table, th, td {
        border: solid 1px #bbbbbb;
        border-collapse: collapse;
        padding: 2px;
        background-color: white;
    }
</style>
<br /><br /><br /><br /><br />
<h6><a href="~/admin">Povratak nazad</a></h6>
<br />
<h1>Izbriši putovanje</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <form method="post" action="" name="form">
                <table border="1">
                    <thead>
                        <tr>
                            <th>&nbsp;</th>
                            <th>Id</th>
                            <th>Naziv</th>
                            <th>Cijena</th>
                            <th>Datum kreiranja</th>
                            <th>Polazak</th>
                            <th>Povratak</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var row in db.Query(selectQueryString))
                        {
                            <tr>
                                <td><a href="@Href("~/DeleteProduct", row.IdPutovanje)">Obriši</a></td>
                                <td>@row.IdPutovanje</td>
                                <td>@row.NazivPutovanja</td>
                                <td>@row.Cijena</td>
                                <td>@row.DatumKreiranjaPutovanja</td>
                                <td>@row.Polazak</td>
                                <td>@row.Povratak</td>
                                <td>@row.StatusPutovanja</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>